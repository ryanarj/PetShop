<Page x:Class="PetShop.registerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetShop"
      mc:Ignorable="d" 
      Title="Login" Height="400" Width="400" Background="DodgerBlue">
    <Grid Background="Beige" Margin="20">
        <StackPanel>
            <Label Content="Login" Foreground="DodgerBlue" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username" />
            <TextBox Name="usernameTB" Margin="10"/>
            <Label Content="Password"/>
            <TextBox Name="passwordTB" Margin="10"/>
            <Label Content="Re-enter Password"/>
            <TextBox Name="password2TB" Margin="10"/>
            <Button Name="submitBtn" Click="submitBtn_Click" Content="Submit" Margin="60 10" />
        </StackPanel>
    </Grid>
</Page>
