<Page x:Class="PetShop.loginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetShop"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="loginPage">
    <Grid Background="White" Margin="20">
            <StackPanel>
                <Label Content="Login" Foreground="DodgerBlue" FontSize="25" HorizontalAlignment="Center"/>
                <Separator></Separator>
                <Label Content="Username" />
                <TextBox Name="usernameLogTB" Margin="10"/>
                <Label Content="Password"/>
                <TextBox Name="passwordLogTB" Margin="10"/>
                <Button Name="loginBtn" Click="loginBtn_Click" Content="Login" Margin="60 10" />
                <Button Name="registerBtn" Click="registerBtn_Click" Content="Register" Margin="60 10" />
            </StackPanel>
            <Frame Name="Main" Width="542" Height="423" Margin="-153,-82,-129,-81" />
        </Grid>
</Page>
